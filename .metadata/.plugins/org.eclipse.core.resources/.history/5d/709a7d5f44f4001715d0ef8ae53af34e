	var showSideBar=true;
    function openNav() {
	  if(showSideBar==false){
		  showSideBar=true;
          document.getElementById("mySidenav").style.paddingLeft = "250px";
   
    }
	else{
		  showSideBar=false;
		  document.getElementById("mySidenav").style.paddingLeft = "0px";
	}
}
    
